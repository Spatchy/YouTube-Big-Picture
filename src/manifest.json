{
  "name": "YouTube Big Picture",
  "description": "Watch and control YouTube in your browser from your sofa",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "spatchy@spatchy.net"
    }
  },
  "content_scripts": [
    {
      "js": [
        "scripts/cleanInterface.js",
        "scripts/cursor.js",
        "scripts/gamepad.js"
      ],
      "css": [
        "styles/style.css"
      ],
      "matches": [
        "https://*.youtube.com/*"
      ]
    }
  ]
}